    <label for="update_product_sales_price">New Sales Price: </label>
    <input type="number" name="update_product_sales_price" id="update_product_sales_price" step="0.01" min="0" />

    <label for="update_product_type_id">Product Type ID: </label>
    <select name="update_product_type_id" id="update_product_type_id" required>
    <option value="" selected disabled>Select a Product Type</option>
    {{#each producttypes}}
        <option value="{{this.productTypeID}}">
            {{this.productTypeID}} - {{this.productType}}
        </option>
    {{/each}}
    </select>

    <label for="update_vendor_id">Vendor ID: </label>
    <select name="update_vendor_id" id="update_vendor_id" required>
    <option value="" selected disabled>Select a Vendor</option>
    {{#each vendors}}
        <option value="{{this.vendorID}}">
            {{this.vendorID}} - {{this.companyName}}
